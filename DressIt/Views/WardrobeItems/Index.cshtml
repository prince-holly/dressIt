@model IEnumerable<DressIt.Models.WardrobeItem>

@{
    ViewBag.Title = "WardrobeItems";
}

<h2>Wardrobe</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Photo)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Type.TypeName)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Name)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Photo)
            @*<img src="@Url.Content(Model.WardrobeItems)" alt="IMAGES" />*@
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Type.TypeName)
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id=item.WardrobeItemID }) |
            @Html.ActionLink("Details", "Details", new { id=item.WardrobeItemID }) |
            @Html.ActionLink("Delete", "Delete", new { id=item.WardrobeItemID })
        </td>
    </tr>
}

</table>
